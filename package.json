{
  "name": "frontend-workspace",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "packageManager": "npm@11.3.0",
  "engines": {
    "node": ">=20.19"
  },
  "scripts": {
    "prepare": "husky",
    "localPC": "vite --mode localPC",
    "dev": "vite --mode dev",
    "build:dev": "tsc -b && vite build --mode dev",
    "preview:dev": "vite preview --mode dev --port 5173",
    "build:prod": "tsc -b && vite build --mode prod",
    "preview:prod": "vite preview --mode prod --port 5173",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --coverage --ci"
  },
  "dependencies": {
    "@emotion/styled": "^11.11.5",
    "@mui/material": "^6.1.3",
    "@tanstack/query-core": "^5.56.2",
    "@tanstack/react-query": "^5.56.2",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.12",
    "html-to-plaintext": "^0.1.1",
    "i18next": "^25.4.1",
    "marked-react": "^3.0.1",
    "motion": "^11.15.0",
    "openapi-typescript": "^7.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.0.3",
    "react-router-dom": "^7.0.2",
    "react-virtuoso": "^4.14.0",
    "string-strip-html": "^13.4.13",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jest/globals": "^30.0.5",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/react-highlight-words": "^0.20.0",
    "@types/sockjs-client": "^1.5.4",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "openapi-filter": "^3.2.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --config eslint.config.js --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
